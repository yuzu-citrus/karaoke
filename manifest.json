{
    "manifest_version": 3,
    "name": "入退室システム",
    "version": "1.0",
    "description": "氏名と部屋番号を選択して入退室を記録するChrome拡張機能 (単一HTMLファイル)",
    "action": {
        "default_popup": "index.html"
        // アイコンは指定しないことで、Chromeが提供するデフォルトのパズルピースアイコンが使用されます。
    },
    "permissions": [],
    "host_permissions": [
        "https://script.google.com/macros/s/*"
    ]
}

